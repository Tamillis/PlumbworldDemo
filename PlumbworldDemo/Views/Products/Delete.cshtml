@model PlumbworldDemo.Models.Products.Product

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete @Model.Name?</h1>

<div class="col-md-4">
    <div class="form-group">
        <label class="control-label">Description</label>
        <p class="form-control">@Model.Description</p>
    </div>
    <div class="form-group">
        <label class="control-label">Price</label>
        <p class="form-control">@Model.Price</p>
    </div>
    <div class="form-group">
        <label class="control-label">Stock</label>
        <p class="form-control">@Model.Stock</p>
    </div>
    <div class="form-group">
        <label class="control-label">Active</label>
        <p class="form-control">@(Model.IsActive ? "Active" : "Inactive")</p>
    </div>
    <form asp-controller="Products" asp-action="DeleteConfirmed" method="post" class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
        </div>
    </form>
</div>

<div class="mt-2">
    <a asp-controller="Products" asp-action="Index">Back to List</a>
</div>

